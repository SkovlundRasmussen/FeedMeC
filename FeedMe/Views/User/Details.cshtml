@model FeedMe.ViewModels.UserCreateViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>User Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label>ID:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.user.user_id)
        </dd>
        <dt class = "col-sm-2">
            <label>Firstname:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.user.firstname)
        </dd>
        <dt class = "col-sm-2">
            <label>Lastname:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.user.lastname)
        </dd>
        <dt class = "col-sm-2">
            <label>Email:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.user.email)
        </dd>
        <dt class = "col-sm-2">
            <label>Role:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.role.role_name)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit My Details", "Edit", new { id = Model.user.user_id })
</div>
