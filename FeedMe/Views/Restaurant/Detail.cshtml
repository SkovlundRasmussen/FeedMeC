@using Microsoft.AspNetCore.Mvc.Rendering
@model IEnumerable<FeedMe.Models.Restaurant>
@{

    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Menu</h1>
<table class="table">
    <thead>
    <tr>
        <th>
            Number
        </th>
        <th>
            Name
        </th>
        <th>
            Category
        </th>
        <th>
            Price
        </th>
        <th>
                
        </th>
    </tr>
    </thead>
    <tbody>
    @{ int count = 1;
        var item_id = "";
        foreach (var item in Model)
        {
            @Html.DisplayFor(modelItem => item.menu)
            @foreach (var i in item.menu)
             {
                 <tr>
                     <td>
                         @Html.DisplayFor(modelItem => count)
                     </td>

                     @foreach (var j in i)
                     {

                         @if (j.Name != "_id")
                          {

                              <td>
                                  @Html.DisplayFor(modelItem => j.Value.AsString)
                              </td>
                          }
                          else
                          {
                              item_id = j.Value.AsObjectId.ToString();
                              Console.WriteLine("|||||||||||||||||||||-- " +item_id + " --|||||||||||||||||||||");
                          }


                     }
                     <td>
                         @Html.ActionLink("Add", "Add", new {id=item_id })
                     </td>

                 </tr>
                 count++;
             }
        }
    }
    </tbody>
</table>